# Backend datasource
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/chaintrust
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Web3 / RPC
ETH_RPC_URL=https://sepolia.infura.io/v3/<PROJECT_ID>
CONTRACT_ADDRESS=<DEPLOYED_CONTRACT_ADDRESS>
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_REQUIRED=false
BLOCKCHAIN_CHAIN_ID=11155111
BLOCKCHAIN_PRIVATE_KEY=<PRIVATE_KEY_HEX_WITHOUT_0X>
BLOCKCHAIN_GAS_LIMIT=550000
BLOCKCHAIN_GAS_PRICE_WEI=0

# Hardhat deploy config (contracts/)
HARDHAT_LOCAL_RPC_URL=http://127.0.0.1:8545
HARDHAT_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/<PROJECT_ID>
HARDHAT_DEPLOYER_PRIVATE_KEY=<PRIVATE_KEY_HEX_WITHOUT_0X>
HARDHAT_ETHERSCAN_API_KEY=<ETHERSCAN_KEY>
LOAN_POLICY_THRESHOLDS_FILE=/app/model/policy_thresholds.json
LOAN_POLICY_REJECT_BURN_ADDRESSES=true
LOAN_POLICY_REJECT_KNOWN_CONTRACT_ADDRESSES=true
LOAN_POLICY_REJECT_CONTRACT_ADDRESSES=true
LOAN_POLICY_REJECT_RUGPULL_EXPOSURE_GTE=0.70
LOAN_POLICY_REJECT_WALLET_AGE_DAYS_LT=14
LOAN_POLICY_REJECT_LIQUIDATION_EVENTS_GTE=3

# ML service
ML_SERVICE_URL=http://ml-service:8000

# Etherscan
ETHERSCAN_API_KEYS=<KEY1>,<KEY2>,<KEY3>
ETHERSCAN_CHAIN_ID=1
WALLET_SYNTHETIC_FALLBACK_ENABLED=false

# Frontend
REACT_APP_BACKEND_URL=http://localhost:8080

# General
APP_SECRET=change_this
