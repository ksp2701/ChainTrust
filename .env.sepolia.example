# Sepolia + Internet deployment environment
# Copy to your real deployment environment variables (Render/Railway/etc).

# Blockchain / contract
ETH_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_REQUIRED=false
BLOCKCHAIN_CHAIN_ID=11155111
CONTRACT_ADDRESS=<sepolia_contract_address>
BLOCKCHAIN_PRIVATE_KEY=<deployer_private_signer_without_0x>
BLOCKCHAIN_GAS_LIMIT=550000
BLOCKCHAIN_GAS_PRICE_WEI=0

# Hardhat deploy/verify helpers
HARDHAT_SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
HARDHAT_DEPLOYER_PRIVATE_KEY=<deployer_private_signer_without_0x>
HARDHAT_ETHERSCAN_API_KEY=<etherscan_key>

# Etherscan data source
ETHERSCAN_API_KEYS=<KEY1>,<KEY2>,<KEY3>
ETHERSCAN_CHAIN_ID=1
WALLET_SYNTHETIC_FALLBACK_ENABLED=false

# Backend database (Supabase Postgres)
SPRING_DATASOURCE_URL=jdbc:postgresql://<supabase-host>:5432/postgres?sslmode=require
SPRING_DATASOURCE_USERNAME=<supabase_user>
SPRING_DATASOURCE_PASSWORD=<supabase_password>

# Public service URLs
ML_SERVICE_URL=<public_url_of_ml_service>
REACT_APP_BACKEND_URL=<public_url_of_backend>
